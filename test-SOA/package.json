{
  "name": "test-hrmSOA",
  "version": "1.0.0",
  "type": "module",
  "description": "Centralized tests for HRM SOA project",
  "scripts": {
    "test:backend": "cd backend/identity-service && npm test",
    "test:frontend": "node frontend/ui/run-tests.js",
    "test:admin": "node frontend/ui/admin-search-filter.test.js",
    "test:navigation": "node frontend/ui/navigation.test.js",
    "test:staff-customer": "node frontend/ui/staff-customer.test.js",
    "test:staff-customer-export": "node frontend/ui/staff-customer-export.test.js",
    "test:browser": "node frontend/ui/test-browser-display.js",
    "test:visual": "node frontend/ui/test-visual.js",
    "test:all": "npm run test:backend && npm run test:frontend",
    "test:all-ui": "npm run test:frontend && npm run test:admin && npm run test:navigation",
    "start:services": "powershell -ExecutionPolicy Bypass -File start-services-and-test.ps1",
    "stop:services": "powershell -ExecutionPolicy Bypass -File stop-services.ps1",
    "install:backend": "cd backend/identity-service && npm install",
    "install:frontend": "cd ../../frontend-hrmSOA && npm install",
    "install:all": "npm run install:backend && npm run install:frontend"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "axios": "^1.13.2",
    "jest": "^29.7.0",
    "selenium-webdriver": "^4.15.0",
    "supertest": "^6.3.3",
    "xlsx": "^0.18.5"
  },
  "dependencies": {
    "chromedriver": "^143.0.3"
  }
}
